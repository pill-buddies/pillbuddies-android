<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pillpals.pillpals">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-feature android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:hardwareAccelerated="true"
        android:name="com.pillpals.pillpals.PillPalsApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.pillpals.pillpals.ui.EditScheduleActivity"
            android:label="@string/title_activity_edit_schedule"
            android:parentActivityName="com.pillpals.pillpals.ui.AddDrugActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.pillpals.pillpals.ui.AddDrugActivity" />
        </activity>
        <activity android:name="com.pillpals.pillpals.ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <receiver
            android:name="com.pillpals.pillpals.services.AlarmReceiver"
            android:process=":remote" />
        <receiver
            android:name="com.pillpals.pillpals.services.BootupReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity android:name="com.pillpals.pillpals.ui.AddDrugActivity"></activity>
        <activity android:name="com.pillpals.pillpals.ui.EditMedicationIcon"></activity>
        <activity android:name="com.pillpals.pillpals.ui.DrugGallery"></activity>
        <activity android:name="com.pillpals.pillpals.ui.SettingsActivity"
            android:theme="@style/PreferenceTheme">
        </activity>

        <activity android:name="com.pillpals.pillpals.ui.medications.medication_info.MedicationInfoActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.pillpals.pillpals.ui.MainActivity" />
        </activity>
    </application>

</manifest>